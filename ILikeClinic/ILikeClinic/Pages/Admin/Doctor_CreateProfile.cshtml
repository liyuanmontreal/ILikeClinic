@page
@using ILikeClinic.Model
@using Microsoft.AspNetCore.Identity
@model ILikeClinic.Pages.Admin.Doctor_CreateProfileModel
@{
}
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager



<partial name="_ToastrNotification" />

<br />

<h1 class="text-info">Create a doctor Profile</h1>
<br />

<div class="border container p-4">

    <form method="post" enctype="multipart/form-data">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input asp-for="Doctor.Id" hidden/>

       
        <div class="form-group row fs-4">
            <div class="col-3 ">
                <label asp-for="Doctor.FirstName"></label>

            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Doctor.FirstName" />
            </div>
            <span asp-validation-for="Doctor.FirstName" class="text-danger fs-5"></span>
        </div>
        <br />


        <div class="form-group row fs-4">
            <div class="col-3 ">
                <label asp-for="Doctor.LastName"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Doctor.LastName" />
            </div>
            <span asp-validation-for="Doctor.LastName" class="text-danger fs-5"></span>
        </div>
        <br />


        <div class="form-group row fs-4">
            <div class="col-3">
                <label asp-for="Doctor.Gender"></label>
            </div>
            <div class="col-6">
                <select class="custom-select col-12" asp-for="Doctor.Gender" asp-items="Html.GetEnumSelectList<Gender>()">
                    <option value="">--Select Gender--</option>
                </select>
            </div>            
            <span asp-validation-for="Doctor.Gender" class="text-danger fs-5"></span>
        </div>
        <br />

        <div class="form-group row fs-4">
            <div class="col-3">
                <label asp-for="Doctor.DOB"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Doctor.DOB" />
            </div>
            <span asp-validation-for="Doctor.DOB" class="text-danger fs-5"></span>
        </div>
        <br />
        <div class="form-group row fs-4">
            <div class="col-3">
                <label asp-for="Doctor.PhoneNumber"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Doctor.PhoneNumber" />
            </div>
            <span asp-validation-for="Doctor.PhoneNumber" class="text-danger fs-5"></span>
        </div>
        <br />
        <div class="form-group row fs-4">
            <div class="col-3">
                <label asp-for="Doctor.Speciality">Speciality</label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Doctor.Speciality" />
            </div>
            <span asp-validation-for="Doctor.Speciality" class="text-danger fs-5"></span>
        </div>
        <br />

         <div class="form-group row fs-4">
            <div class="col-3">
                <label asp-for="Doctor.Description">Description</label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Doctor.Description" />
            </div>
            <span asp-validation-for="Doctor.Description" class="text-danger fs-5"></span>
        </div>
        <br />

        <div class="form-group row fs-4">
            <div class="col-3">
                <label asp-for="Doctor.HiredDate">Hired Date</label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Doctor.HiredDate" />
            </div>
            <span asp-validation-for="Doctor.HiredDate" class="text-danger fs-5"></span>
        </div>
        <br />

        <div class="form-group row fs-4">
            <div class="col-3">
                <label asp-for="Doctor.ProfilePhoto">Photo</label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Doctor.ProfilePhoto" />
            </div>
            <span asp-validation-for="Doctor.ProfilePhoto" class="text-danger fs-5"></span>
        </div>
        <br />

        <div class="form-group row fs-4">
            <div class="col-3">
                <label asp-for="Doctor.LicenseNumber "> LicenseNumber </label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Doctor.LicenseNumber" />
            </div>
            <span asp-validation-for="Doctor.LicenseNumber" class="text-danger fs-5"></span>
        </div>
        <br />



        <br />
        <div class="form-group row fs-3">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control text-bg-primary ">Save</button>
            </div>
            <div class="col-3">
                <a asp-page="Doctor_List"
                class="btn btn-secondary form-control text-bg-info">Back to doctor list</a>
            </div>


        </div>

    </form>

</div>



