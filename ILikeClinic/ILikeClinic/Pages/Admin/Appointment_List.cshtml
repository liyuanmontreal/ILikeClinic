@page
@model ILikeClinic.Pages.Admin.Appointment_ListModel
@{
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Appointment List
            </h2>
        </div>

   

        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp Add an Appointment
            </a>
        </div>
    </div>

</div>



<table class="table">
    <thead>
        <tr>
            <th>
                Date
            </th>
             <th>
                Time
            </th>
            <th>
                Doctor
            </th>
            <th>
                Patient
            </th>
            <th>
                Status
            </th>         
            <th>
                Actions
            </th>
            
          
        </tr>
    </thead>
    <tbody>
 
        @foreach (var item in Model.Appointments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AppStartAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppStartAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Doctor.FullName)
                </td>
                <td>
                   @Html.DisplayFor(modelItem => item.Patient.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>              
               
                <td>
                    <a asp-page="./Patient_Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Patient_Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Patient_Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


