@page
@using ILikeClinic.Model
@using Microsoft.AspNetCore.Identity
@model ILikeClinic.Pages.Admin.Patient_DetailModel
@{
}

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager



<br />

<h1 class="text-info">Profile Detail</h1>
<br />

<div class="border container p-4">

    <form method="post" enctype="multipart/form-data">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input asp-for="Patient.Id" hidden/>

       
       
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient.FullName)
        </dt>
         <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.FullName)
        </dd>
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient.DateOfBirth)
        </dt>
         <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient.PhoneNumber)
        </dt>
         <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.PhoneNumber)
        </dd>
      
     
    </dl>


        <br />
        <div class="form-group row fs-3">            
            <div class="col-3">
                <a asp-page="Patient_List"
                class="btn btn-secondary form-control text-bg-info">Back to list</a>
            </div>


        </div>

    </form>

</div>


