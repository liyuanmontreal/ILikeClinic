@page
@using Microsoft.AspNetCore.Identity
@model ILikeClinic.Pages.FAQ.IndexModel
@{
}
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<br />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                 Frequently Asked Questions
            </h2>
        </div>
        <div class="col-6 text-end">
           <a asp-page="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp Ask a question
           </a>
        </div>
    </div>
   
</div>
<br />
<div class="border container p-4">

    

    <div class="container fs-5">
        @foreach (var obj in Model.fAQs)
        {
            <div class="row m-3">
                <div class="col-2 ">
                    <div class="text-primary">Question</div>
                </div>
                <div class="col-4">
                    <div class="">@obj.Question</div>
                </div>
                <br>
                <div class="col-2 ">
                    <div class="text-primary">Answer </div>
                 </div>
                <div class="col-4">
                    <div class="">@obj.Answer</div>
                </div>
                <hr>
            </div>

            <br />
            }
        </div>




</div>


