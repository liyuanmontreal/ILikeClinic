@page
@model ILikeClinic.Pages.Patient.Message_ListModel  
@{
    ViewData["Title"] = "Message page";
}



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-info bottom-left">
                All Your Messages
            </h1>
        </div>
    </div>

    <br />
    <div class="col-6 text-end offset-6">
        <a asp-page="PatientSendMessage" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> &nbsp Send Message
        </a>
    </div>
</div>




<table class="table table-hover">
    <thead>
        <tr>
            <th>
                To
            </th>
            <th>
                Text
            </th>
            <th>
                Time
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        <form method="post">
            @foreach (var item in Model.Messages)
            {
            <tr >
                <td>
                        @Html.DisplayFor(modelItem => item.ToId)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.SendTime)
                </td>
                <td>
                    <button asp-route-id="@item.Id" asp-page-handler="Delete" onclick="return confirm('Are you sure to delete it?')" class="btn btn-warning mx-2 ">
                        Delete
                    </button>


                </td>
            </tr>
            }
        </form>
        
    </tbody>
</table>


