    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Doctor Info
            </h2>
        </div>
        <input asp-for="Doctor.Id" hidden/>
    </div>

    <img src="@Url.Content(Model.Doctor.ProfilePhoto)" />
