@page
@model ILikeClinic.Pages.Doctors.RejectAppointmentModel
@{
    ViewData["Title"] = "Reject Appointment";
}

<partial name="_ToastrNotification" />

<h3>Are you sure you want to reject this appointment?</h3>
<div class="border container p-4">
    <h4>Appointment information</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.Doctor.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.Doctor.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.Patient.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.Patient.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.Reason)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.Reason)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.AppStartAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.AppStartAt)
        </dd>


    </dl>

    <form method="post">
        <input type="hidden" asp-for="Appointment.Id" />




        <div class="form-group row fs-3">
            <div class="col-3 offset-3">
                <button type="submit" onclick="return confirm('Are you sure to reject it?')"  class="btn btn-primary form-control text-bg-primary ">Reject</button>
            </div>
            <div class="col-3">
                <a asp-page="AppointmentToDoctor"
                   class="btn btn-secondary form-control text-bg-info">Back to list</a>
            </div>


        </div>
    </form>


</div>

